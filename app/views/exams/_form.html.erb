<%= simple_form_for([@appointment, @exam]) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :establishment_name %>
    <%= f.datetime_field :exam_date %>
    <br><br>
    <%= f.label 'Documentos' %> 
    <%= f.file_field :documents, multiple: true %>

    <%= f.button :submit, "Criar Exame" , {class:"btn mt-3 button-submit-auth-entry mb-4 btn-lg btn-block text-center"} %>
    <!-- <%= f.association :appointment %> -->
  </div>
<% end %>