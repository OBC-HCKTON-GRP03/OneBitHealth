<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle"
  aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">    
    <div class="modal-content">
     
      <!-- Title -->
     
      <div class="modal-header">
        <%= image_tag 'icon_share_history.svg' %>
        <h2 class="modal-title ml-3" id="exampleModalLongTitle">
           Compartilhamento
        </h2>

        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>  
      
      <!-- Input Search -->
      
      <div class="modal-body">
        <div class="input_search mb-5 mt-1">
            <div class="container">
              <span class="input-group-append justify-content-center">
                  <%= image_tag 'icon_search_magnifying_glass', class:"search_button" %>
                  <input type="text" id="shared_search" name="share_search" value="" placeholder="Digíte um e-mail">
              </span>
            </div>
        </div>

        <!-- Where search result fields appear -->
        <div class="title_table_results mt-2">
          <span class="2 text-center"> Compartilhar seu Histórico</td>
        </div>

        <div class="container search_result_table mb-5">
          <table class="not-shared-yet mt-5  table">
            <thead>
              <tr>
              </tr>
            </thead>
            <tbody>              
              <!-- Field where it will print results -->
            </tbody>
          </table>
        </div>
        <!-- ---------------------------------------------------------- -->

        <!-- Users you shared your queries with   -->
        <div class="title_search_result_table title_table_results">
          <span class="2 text-center"> Remover Compatilhamento</td>
        </div>

        <div class="container search_result_table mb-5">
          <table class="table mt-5">
            <thead>
              <tr>
              </tr>
            </thead>
          <tbody>
            
            <% current_user.users_i_share_with.each do |shared| %>
              <tr>
                <td>
                  <%= "#{shared.name}" %>
                </td>
                <td>
                  <%= link_to shared_user_path(shared), method: :delete, data: { confirm: 'Você tem certeza?' } do %>
                    <%= image_tag('icon_trash.svg')%>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      </form>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      <button type="button" class="btn btn-aqua" id="new-task">Share</button>
    </div>
  </div>
</div>
</div>