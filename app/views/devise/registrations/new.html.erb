<div class="container">
  <div class="my-5 row justify-content-md-center">
    <h2 class="text-secondary">Crie sua conta</h2>
  </div>
  <div class="row justify-content-md-center">
    <div class="col-5">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group text-secondary">
          <%= f.label "Nome completo" %>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control"  %>
        </div>

        <div class="form-group text-secondary">
          <%= f.label :email %>
          <%= f.email_field :email, autocomplete: "email", class: "form-control"  %>
        </div>

        <div class="form-group text-secondary">
          <%= f.label "Senha" %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="form-group text-secondary">
          <%= f.label "Confirmar a senha" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="actions">
          <%= f.submit "Cadastrar", class: "col btn-lg btn-primary" %>
        </div>

        <div class="my-5 text-center">
          <p class="text-secondary">JÃ¡ tem uma conta? <%= render "devise/shared/links"%></p>
        </div>
      </div>
    </div>
  <% end %><br />
</div>