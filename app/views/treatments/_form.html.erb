<%= simple_form_for([@appointment, @treatment]) do |f| %>
<%= f.error_notification %>
<%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

<div class="form-inputs">
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :establishment_name %>
  <!-- <%= f.input :kind %> -->
  <%= f.input :kind, collection: Treatment.kinds.keys %>
  <%= f.input :treatment_date %>
  <!-- <%= f.association :appointment %> -->
</div>

<div class="form-actions">
  <%= f.button :submit %>
</div>
<% end %>