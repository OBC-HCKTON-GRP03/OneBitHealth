<p id="notice"><%= notice %></p>

<div class="tables_standart mb-5">
  <h1>Consultas</h1>

  <table class="table table-hover" 
    data-toggle="table"
    data-search="true"
    data-strict-search="true"
    >
    <thead>
      <tr>
        <th>Titulo</th>
        <th>Nome do Profissional</th>
        <th>Data da Consulta</th>
        <th colspan="3" style="background-color: var(--color-primary)"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @appointments.each do |appointment| %>
        <td ><%= appointment.title %></td>
        <td ><%= appointment.professional_name %></td>
        <td ><%= appointment.appointment_date.strftime('%d/%m') %></td>
        
        <td>
          <%= link_to appointment do %>
            <%= image_tag 'icon_show.svg'%>
          <% end %>
        </td>

        <td>
          <%= link_to edit_appointment_path(appointment)  do %>
            <%= image_tag 'icon_edit.svg'%>
          <% end %>  
        </td>

        <td>
          <%= link_to appointment, method: :delete, data: { confirm: 'VocÃª tem certeza?' }  do %>
            <%= image_tag('icon_trash.svg')%>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <button class="button_shape create_instance btn-lg btn-block mt-5">
    <%= link_to 'Nova consulta', new_appointment_path %>
  </button>
</div>


  
